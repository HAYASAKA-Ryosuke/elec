{
  "name": "elec",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc -p tsconfig.json --noEmit",
    "ts2scm": "node dist/src/cli.js ts2scm examples/minimal.ts -o examples/minimal.scm",
    "fmt": "node dist/src/cli.js fmt examples/minimal.scm",
    "fmt:check": "node dist/src/cli.js fmt --check examples/minimal.scm",
    "lint": "node dist/src/cli.js lint examples/minimal.scm",
    "generate:pico": "node dist/src/cli.js generate --target pico --input examples/pico_bme280_led.scm --out-dir out/pico_bme280_led",
    "check:all": "npm run build && npm run ts2scm && npm run fmt:check && npm run lint"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  }
}
